<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Content">
        <SwitchPreferenceCompat
            app:key="isDarkTheme"
            app:title="Dark theme" />

        <SeekBarPreference
            android:key="textSize"
            android:title="Text size"
            app:min="10"
            android:max="50"
            android:defaultValue="18">
        </SeekBarPreference>

        <SeekBarPreference
            android:key="timeAutoScroll"
            android:title="Time auto scroll"
            app:min="5"
            android:max="60"
            android:defaultValue="15">
        </SeekBarPreference>

    </PreferenceCategory>

</PreferenceScreen>
